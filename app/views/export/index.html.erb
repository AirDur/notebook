<h4>Download your Notebook</h4>
<p>We offer the following download formats, with more coming soon.</p>

<div class="row">
  <div class="col s12 m4">
    <div class="hoverable card">
      <div class="card-content">
        <div class="card-title">
          <i class="material-icons circle blue white-text right">file_download</i>
          Outline (TXT)
        </div>
        <div class="card-body">
          <ul>
            <li><%= link_to "notebook.txt", notebook_outline_path %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="col s12 m4">
    <div class="hoverable card">
      <div class="card-content">
        <div class="card-title">
          <i class="material-icons circle blue white-text right">file_download</i>
          Excel (CSV)
        </div>
        <div class="card-body">
          <ul>
            <% Rails.application.config.content_types[:all].each do |page_type| %>
              <li>
                <%= link_to "#{page_type.name.downcase.pluralize}.csv",
                            notebook_csv_path(model: page_type.name.downcase.pluralize) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="col s12 m4">
    <div class="hoverable card">
      <div class="card-content">
        <div class="card-title">
          <i class="material-icons circle blue white-text right">file_download</i>
          JSON
        </div>
        <div class="card-body">
          <ul>
            <li><%= link_to "notebook.json", notebook_json_path %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="col s12 m4">
    <div class="hoverable card">
      <div class="card-content">
        <div class="card-title">
          <i class="material-icons circle blue white-text right">file_download</i>
          XML
        </div>
        <div class="card-body">
          <ul>
            <li><%= link_to "notebook.xml", notebook_xml_path %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
